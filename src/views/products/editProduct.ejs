<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/edit.css">
    <title>Editando producto</title>
</head>
<body>
    <%- include('../partials/header') %>
    <main>
        <h1>Editar producto</h1>
        <div class="register-product">
            <section class="informacion-actual">

                <h1>Información actual</h1>

                <div class="informacion-actual-imgs">

                    <div class="datos-actual">
                
                    <img src="/img/<%=product.category%>/<%=product.images[0]%>" alt="<%=product.name%>">
                    <p>Imagen 1</p>
                
              
                    <p class="titulo">Nombre del producto:</p>
                    <p><%=product.name%></p>
                    <p class="titulo">Descripción:</p>
                    <p><%=product.description%></p>
                    <p class="titulo">Precio: </p>
                    <p>$<%=product.price%></p>
                    
                </div>
            </section>
    
    
                <form action="/products/<%=product.id%>?_method=PATCH" method="POST" enctype="multipart/form-data">
                    <section class="nombre">
                        <label for="name">Nombre del producto: </label>
                        <input type="text" name ="name" id="name" value="<%=product.name%>">
                    </section>
    
                    <section class="descripcion">  
                        <label for="description">Descripción:</label>
                        <textarea name ="description" id="description" rows="5"><%=product.description%></textarea>
                    </section>
    
                    <section class="precio">
                        <label for="price">Precio: $</label>
                        <input type="text" name ="price" id="price" value="<%=product.price%>">
                    </section>
    
                    <section class="categoria">
                        <label for="category">Categoría: </label>
                        <div class="cat-opcion">
                            <input type="radio" name="category" id = "categoria" value="sinflor" <%= product.category == "sinflor" ? "checked" : ""%>>
                            <label for="sinflor">Plantas sin flor</label>
                        </div>
                        <div class="cat-opcion">
                            <input type="radio" name="category" id = "categoria" value="conflor" <%= product.category == "conflor" ? "checked" : ""%>> 
                            <label for="conflor">Plantas con flor</label>
                        </div>
                    </section>

                    <p><strong>Material de maceta:</strong></p>
                    <section class="materials">
                        <label for="materials"> </label>
                        <div class="mat-opcion">
                            <input type="radio" name="materials" id = "materials" value="porcelana" <%= product.material == "porcelana" ? "checked" : ""%>>
                            <label for="porcelana">Porcelana</label>
                        </div>
                        <div class="mat-opcion">
                            <input type="radio" name="materials" id = "materials" value="cerámica" <%= product.material == "cerámica" ? "checked" : ""%>> 
                            <label for="cerámica">Cerámica</label>
                        </div>
                        <div class="mat-opcion">
                            <input type="radio" name="materials" id = "materials" value="plástico" <%= product.material == "plástico" ? "checked" : ""%>>
                            <label for="Plástico"> Plástico</label>
                        </div>
                    </section>
    
                    <section class="tallas">

                        <p><strong>Tamaño de maceta y cantidad de cada una:</strong></p>
                            
                            <div class="tallas-text">
                                <div class="quant">
                                    <label for="quantityS">S:</label>
                                    <input type="number" name ="quantityS" id="quantityS" value=0 min="0"><%= product.quantityS == "" ? "checked" : ""%>>
                                </div>
                                <div class="quant">
                                    <label for="quantityM">M:</label>
                                    <input type="number" name ="quantityM" id="quantityM" value=0 min="0">
                                </div>
                                <div class="quant">
                                    <label for="quantityL">L:</label>
                                    <input type="number" name ="quantityL" id="quantityL" value=0 min="0">
                                </div>
                            </div>
                    </section>

                            <!-- imagenes de plantas y macetas -->
                    <section class="agregar-img">
                        <p><strong>Imágenes:</strong></p>
                        <div class="imagenes">
                            <ul>
                                <li>
                                    <input type="file" name="upload_img" id="imágenes" placeholder="Subir">
                                    <label for="upload_img">Upload Image1</label>
                                </li>
                                
                            </ul>
                        </div>
                    </section>
      <!-- botones -->
      <section class="botones">
        <button>Cancelar la operación</button>
        <button  type="reset">Borrar </button>
        <button type="submit">Guardar producto editado</button>
    </section>
                </form>
        </div>
        
    </main>

    <%- include("../partials/footer.ejs")%>
</body>



</html>
